<div id="<%= dom_id ingredient %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Meal:</strong>
    <%= ingredient.meal_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Food:</strong>
    <%= ingredient.food_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Grams:</strong>
    <%= ingredient.grams %>
  </p>

    <%= link_to 'Edit this ingredient', edit_meal_ingredient_path(ingredient), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
</div>
