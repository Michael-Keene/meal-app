<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <% unless no_header ||= false%>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        <%= edibles_name ||= "Food" %>
      </th>
      <% unless no_quantity ||= false %>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Grams
      </th>
      <% end %>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Fat
      </th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Carbs
      </th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Fibre
      </th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Protein
      </th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Calories
      </th>
      <th scope="col" class="relative px-6 py-3">
        <span class="sr-only">Edit</span>
      </th>
      <% end %>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200" id="<%= turbo_stream_to_subscribe_to %>_edible_rows">
    <%= turbo_stream_from turbo_stream_to_subscribe_to %>
    <% edibles.each do |edible|%>
      <%= render partial: "edibles/row", locals: {
               edible: edible,
               presenter: presenter ||= nil,
               no_quantity: no_quantity ||= false
                                             } %>
    <% end %>
  </tbody>
</table>
