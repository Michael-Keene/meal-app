<%
class_info_based_on_selection = ->(nav_url) do
  if nav_item_selected?(nav_url)
    "bg-gray-900 text-white px-3 py-2 rounded-md text-lg hover:text-gray-400"
  else
    "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-lg"
  end
end
%>
<header class="bg-gray-800">
    <nav class="py-4 ml-4">
  <div>
      <ul class="flex">
        <li class="mr-5"> <%= link_to "Daily Log", root_path, {"class": class_info_based_on_selection.call(root_path) }  %></li>
        <li class="mr-5"> <%= link_to "Foods", foods_path, {"class": class_info_based_on_selection.call(foods_path) } %></li>
        <li class="mr-5"> <%= link_to "Meals", meals_path, {"class": class_info_based_on_selection.call(meals_path) } %></li>
        <li class="mr-5"> <%= link_to "Shopping List", shopping_lists_path, {"class": class_info_based_on_selection.call(shopping_lists_path) } %></li>
      </ul>
  </div>
    </nav>
</header>
